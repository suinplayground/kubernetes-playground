{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"token": {
			"type": "string",
			"description": "GitHub token"
		},
		"owner": {
			"type": "string",
			"description": "GitHub owner"
		},
		"retryable_errors": {
			"type": "array",
			"items": {
				"type": "integer"
			},
			"default": [500, 502, 503, 504],
			"description": "List of retryable error codes"
		},
		"max_retries": {
			"type": "integer",
			"default": 3,
			"description": "Maximum number of retries"
		},
		"organization": {
			"type": "string",
			"description": "GitHub organization (deprecated, use owner instead)",
			"deprecated": true
		},
		"base_url": {
			"type": "string",
			"default": "https://api.github.com/",
			"description": "GitHub API base URL"
		},
		"insecure": {
			"type": "boolean",
			"default": false,
			"description": "Allow insecure connections"
		},
		"write_delay_ms": {
			"type": "integer",
			"default": 1000,
			"description": "Write delay in milliseconds"
		},
		"read_delay_ms": {
			"type": "integer",
			"default": 0,
			"description": "Read delay in milliseconds"
		},
		"retry_delay_ms": {
			"type": "integer",
			"default": 1000,
			"description": "Retry delay in milliseconds"
		},
		"parallel_requests": {
			"type": "boolean",
			"default": false,
			"description": "Enable parallel requests"
		},
		"app_auth": {
			"type": "array",
			"maxItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"description": "GitHub App ID"
					},
					"installation_id": {
						"type": "string",
						"description": "GitHub App Installation ID"
					},
					"pem_file": {
						"type": "string",
						"description": "GitHub App PEM file"
					}
				},
				"required": ["id", "installation_id", "pem_file"]
			},
			"description": "GitHub App authentication settings"
		}
	}
}

